{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Burd",
  "version": "1.2.5",
  "identifier": "com.burd.manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build",
    "beforeBundleCommand": "sh -c 'for bin in target/x86_64-apple-darwin/release/burd-app target/x86_64-apple-darwin/release/burd; do [ -f \"$bin\" ] && codesign --force --sign - \"$bin\" 2>/dev/null; done; true'"
  },
  "mainBinaryName": "burd-app",
  "app": {
    "windows": [
      {
        "title": "Burd",
        "width": 1100,
        "height": 650,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/mkcert"
    ]
  }
}
